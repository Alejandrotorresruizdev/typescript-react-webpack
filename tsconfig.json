{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./typings"],
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "sourceMap": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "allowJs": true,
    "noEmit": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "lib": ["es6", "dom"]
  },
  "include": ["./src/**/*"]
}
